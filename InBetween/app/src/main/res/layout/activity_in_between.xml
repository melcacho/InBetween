<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#2b2d2c"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InBetween">

    <TextView
            app:srcCompat="@drawable/ic_money"
            android:background="@drawable/txt_money"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="620dp"
            android:text="@string/money"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:id="@+id/txt_money"/>
    <RelativeLayout
            android:background="#2b2d2c"
            android:layout_width="720dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/card_panel">
        <TextView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/card_table"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:id="@+id/table"/>

        <ImageView
                android:layout_marginTop="140dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_centerHorizontal="true"
                android:layout_width="55dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/img_card"
                android:id="@+id/img_yourCard"/>
        <ImageView
                android:layout_toStartOf="@id/img_yourCard"
                android:layout_marginTop="120dp"
                android:layout_centerHorizontal="true"
                android:layout_width="55dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/img_card"
                android:id="@+id/img_card1"/>
        <ImageView
                android:layout_marginTop="120dp"
                android:layout_toEndOf="@id/img_yourCard"
                android:layout_centerHorizontal="true"
                android:layout_width="55dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/img_card"
                android:id="@+id/img_card2"/>
        <TextView
                android:layout_marginTop="130.5dp"
                android:layout_marginLeft="237.5dp"
                android:background="@drawable/card_placement"
                android:layout_width="65dp"
                android:layout_height="85dp"
                android:id="@+id/placement_left"/>
        <TextView
                android:layout_toEndOf="@id/placement_left"
                android:layout_marginTop="150.5dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/card_placement"
                android:layout_width="65dp"
                android:layout_height="85dp"
                android:id="@+id/placement_center"/>
        <TextView
                android:layout_toEndOf="@id/placement_center"
                android:layout_marginTop="130.5dp"
                android:layout_marginLeft="24.5dp"
                android:background="@drawable/card_placement"
                android:layout_width="65dp"
                android:layout_height="85dp"
                android:id="@+id/placement_right"/>
        <ImageView
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/deck_pic"
                android:id="@+id/imageView"/>

    </RelativeLayout>

    <RelativeLayout
            android:background="#2b2d2c"
            android:layout_width="720dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/card_panel">

        <Button
                android:background="@drawable/btn_lower"
                android:layout_toStartOf="@id/btn_shuffle"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10dp"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:text="@string/btn_fold"
                android:id="@+id/btn_left"/>

        <Button
                android:background="@drawable/btn_shuffle"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/ic_shuffle"
                android:paddingLeft="35dp"
                android:id="@+id/btn_shuffle"/>
        <Button
                android:background="@drawable/btn_lower"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btn_shuffle"
                android:layout_marginHorizontal="10dp"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:text="@string/btn_bet"
                android:id="@+id/btn_right"/>
        <SeekBar
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_marginTop="8dp"
                android:background="@drawable/txt_money"
                android:layout_toEndOf="@id/btn_right"
                android:layout_marginStart="30dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:progress="0"
                android:thumb="@drawable/thumb_pic"
                android:max="5"
                android:id="@+id/seekBar"/>

    </RelativeLayout>

    <ImageButton
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2b2d2c"
            app:srcCompat="@drawable/ic_volume_on"
            android:id="@+id/btn_mute"/>

    <Button
            android:background="@drawable/btn_reward"
            android:layout_toEndOf="@id/btn_mute"
            android:layout_margin="10dp"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:text="@string/reward"
            android:id="@+id/btn_reward"/>


</RelativeLayout>